
@{
    ViewData["Title"] = "Index";
}


@section styles{
    <link href="~/clientSiteFiles/Custom/Contact/contact.css" rel="stylesheet" />
}
<section class="site-section bg-light">
    <div class="w-100  bgImageDiv">
        @* For bg Image*@
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-7 mt-5">

                <form asp-action="" asp-controller="" method="post" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">Bizimlə əlaqə</h2>

                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Ad</label>
                            <input type="text" id="fname" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Soyad</label>
                            <input type="text" id="lname" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="email">E-mail</label>
                            <input type="email" id="email" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label class="text-black" for="subject">Başlıq</label>
                            <input type="text" id="subject" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="message">Mesaj</label>
                            <textarea name="message" id="message" cols="30" rows="7" class="form-control" placeholder="ismarıc və suallarınızı yazın..."></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-md">Göndər<i class="fa fa-arrow-right ml-2"></i></button>
                        </div>
                    </div>


                </form>
            </div>


            <div class="col-md-5 mt-5">

                <div class="p-4 mb-3 bg-white">
                    <p class="mb-0 font-weight-bold">Ünvan</p>
                    <p class="mb-4">Azərbaycan Dövlət Neft və Sənaye Üniversiteti, Azadlıq prospekti, 16/21, Bakı şəh., Azərbaycan Respublikası</p>
                    
                    <p class="mb-0 font-weight-bold">Telefon</p>
                    <p class="mb-4"><a href="#">(12) 498 65 68</a></p>

                    <p class="mb-0 font-weight-bold">Email</p>
                    <p class="mb-0"><a href="mailto:info@adnsu.edu.az">info@adnsu.edu.az</a></p>

                </div>

            </div>
        </div>
    </div>
</section>



