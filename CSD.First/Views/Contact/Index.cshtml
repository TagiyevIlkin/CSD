@model MessageViewModel
@{
    ViewData["Title"] = "Index";
}


@section styles{
    <link href="~/clientSiteFiles/Custom/Contact/contact.css" rel="stylesheet" />
}
<section class="site-section bg-light">
    <div class="w-100  bgImageDiv">
        @* For bg Image*@
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-7 mt-5">

                <form  asp-action="Contact" asp-controller="GetMessage" id="createMessage" method="post" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">Bizimlə əlaqə</h2>

                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="Name" class="text-black"></label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Surname" class="text-black"></label>
                            <input asp-for="Surname" class="form-control">
                            <span asp-validation-for="Surname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label asp-for="Email" class="text-black"></label>
                            <input type="email" asp-for="Email" class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label asp-for="Title" class="text-black"></label>
                            <input asp-for="Title" class="form-control">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label asp-for="Note" class="text-black"></label>
                            <textarea asp-for="Note" cols="20" rows="7" class="form-control" placeholder="ismarıc və suallarınızı yazın..."></textarea>
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-md">Göndər<i class="fa fa-arrow-right ml-2"></i></button>
                        </div>
                    </div>


                </form>
            </div>


            <div class="col-md-5 mt-5">

                <div class="p-4 mb-3 bg-white">
                    <p class="mb-0 font-weight-bold">Ünvan</p>
                    <p class="mb-4">Azərbaycan Dövlət Neft və Sənaye Üniversiteti, Azadlıq prospekti, 16/21, Bakı şəh., Azərbaycan Respublikası</p>

                    <p class="mb-0 font-weight-bold">Telefon</p>
                    <p class="mb-4"><a href="#">(12) 498 65 68</a></p>

                    <p class="mb-0 font-weight-bold">Email</p>
                    <p class="mb-0"><a href="mailto:info@adnsu.edu.az">info@adnsu.edu.az</a></p>

                </div>

            </div>
        </div>
    </div>
</section>
@section scripts{
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/sweetalert/sweetalert.min.js"></script>
    <script src="~/clientSiteFiles/Custom/Contact/contact.js" asp-append-version="true"></script>
}


